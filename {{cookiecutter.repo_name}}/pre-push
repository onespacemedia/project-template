# {% raw %}
#!/bin/bash
if [ -n "$($SHELL -c 'echo $ZSH_VERSION')" ]; then
    . ~/.zshrcPrePush
else
    . ~/.bash_profile
fi

# If the user has virtualenvwrapper use that else use the local .venv
if command -v workon >/dev/null 2>&1; then
    workon "${PWD##*/}"
else
    . .venv/bin/activate
fi

pip install -q --disable-pip-version-check pylint pylint-django pylint-mccabe isort

IN_TEST=false
IN_OVERRIDE=false
FAILED=false

while read -r line; do

	if [ "$line" == "test:" ]; then
		IN_TEST=true
		continue
	fi

	if [ $IN_TEST == true ] && [ "$line" == "override:" ]; then
		IN_OVERRIDE=true
		continue
	fi

	if [ $IN_TEST != true ] || [ $IN_OVERRIDE != true ]; then
		continue
	fi

	if [ ${#line} -eq 0 ]; then
		break
	fi

	# Don't run lines which end with "# CI"
	if [[ "$line" != *"# CI" ]]; then
		echo ">>> ${line:2}"
		if eval "${line:2}"; then
		        echo "<<< Check failed."
		        FAILED=true
		else
		        echo "<<< Check passed."
		fi
	fi

	echo

done < circle.yml

if [ $FAILED == true ]; then
	exit 1
fi

exit 0
# {% endraw %}
