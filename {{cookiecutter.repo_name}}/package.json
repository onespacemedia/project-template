    "babel-eslint": "^6.1.0",
    "babel-loader": "6.2.4",
    "babel-plugin-lodash": "^3.2.6",
    "babel-plugin-transform-runtime": "^6.4.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-es2016": "^6.11.3",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-1": "6.5.0",
    "browser-sync": "2.11.1",
    "compression": "1.6.1",
    "css-loader": "^0.21.0",
    "cssnano": "^3.4.0",
    "del": "2.2.0",
    "eslint": "^3.2.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-html": "^1.5.1",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "gulp": "3.9.1",
    "gulp-autoprefixer": "3.1.0",
    "gulp-changed": "1.3.0",
    "gulp-cssnano": "2.1.1",
    "gulp-data": "1.2.1",
    "gulp-htmlmin": "1.3.0",
    "gulp-iconfont": "6.0.0",
    "gulp-if": "2.0.0",
    "gulp-notify": "2.2.0",
    "gulp-nunjucks-render": "2.0.0",
    "gulp-postcss": "^6.0.1",
    "gulp-rename": "1.2.2",
    "gulp-sequence": "0.4.5",
    "gulp-sizereport": "1.1.3",
    "gulp-sourcemaps": "1.6.0",
    "gulp-stylelint": "^1.1.0",
    "gulp-svgstore": "6.0.0",
    "gulp-uglify": "1.5.3",
    "gulp-util": "3.0.7",
    "gulp-watch": "4.3.5",
    "js-cookie": "^2.0.4",
    "json-loader": "^0.5.4",
    "lodash": "4.6.1",
    "lodash-webpack-plugin": "^0.9.3",
    "lolex": "1.4.0",
    "object-assign": "4.0.1",
    "open": "0.0.5",
    "postcss-apply": "^0.3.0",
    "postcss-assets": "^4.1.0",
    "postcss-brand-colors": "^0.3.0",
    "postcss-calc": "^5.2.1",
    "postcss-color-alpha": "^1.0.3",
    "postcss-conditionals": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-font-awesome": "^0.2.1",
    "postcss-functions": "^2.0.0",
    "postcss-hexrgba": "^0.2.0",
    "postcss-import": "^7.1.3",
